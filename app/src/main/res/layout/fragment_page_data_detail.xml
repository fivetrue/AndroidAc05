<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_fragment_page_data_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        style="@style/CommonText"/>

    <FrameLayout
        android:id="@+id/layout_fragment_page_data_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_fragment_page_data_detail"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fragment_page_data_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/login_fragment_margin_bottom_20dp"
        android:layout_marginBottom="@dimen/login_fragment_margin_bottom_20dp"
        android:src="@drawable/ic_document_25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>