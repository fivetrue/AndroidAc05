<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <FrameLayout
        android:id="@+id/layout_base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.fivetrue.gimpo.ac05.widget.FTActionBar
        android:id="@+id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true"/>


    <View
        android:id="@+id/view_actionbar_shadow"
        android:layout_below="@id/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_shadow_height"
        android:background="@drawable/common_action_bg_shadow"/>

</RelativeLayout>
