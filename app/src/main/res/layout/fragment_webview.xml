<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:v="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <WebView
        android:id="@+id/webview_fragment_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

    <android.support.v4.widget.ContentLoadingProgressBar
        android:id="@+id/pb_fragment_webview"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="4dp"
        style="?android:attr/android:progressBarStyleHorizontal"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fragment_webview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/common_horizontal_padding"
        android:scaleType="centerInside"
        android:src="@drawable/ic_share_25dp"
        v:rippleColor="?attr/colorPrimary"
        v:backgroundTint="?attr/colorPrimaryDark"/>

</RelativeLayout>