<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/layout_fragment_list_label"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingLeft="@dimen/common_horizontal_padding"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_fragment_list_page_data_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/CommonText"/>

        <ImageView
            android:id="@+id/iv_fragment_list_page_data_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/common_horizontal_padding"
            android:paddingRight="@dimen/common_horizontal_padding"
            android:gravity="center"
            android:text="@string/detail"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@drawable/selector_common_list_item_background"/>

        <ImageView
            android:id="@+id/iv_fragment_list_page_data_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_fragment_list_page_data_detail_info"
            android:src="@android:drawable/ic_menu_view"
            android:visibility="gone"/>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_list_page_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_fragment_list_label"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_shadow_height"
        android:background="@drawable/common_action_bg_shadow"
        android:layout_below="@id/layout_fragment_list_label"/>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/common_shadow_height"-->
        <!--android:background="@drawable/common_action_bg_shadow"-->
        <!--android:layout_below="@id/rv_fragment_list_page_data"/>-->

</RelativeLayout>