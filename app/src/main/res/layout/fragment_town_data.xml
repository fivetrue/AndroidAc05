<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_fragment_town_data_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/common_horizontal_padding"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_fragment_town_data_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/CommonText"/>

        <ImageView
            android:id="@+id/iv_fragment_town_data_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/common_horizontal_padding"
            android:paddingRight="@dimen/common_horizontal_padding"
            android:gravity="center"
            android:text="@string/detail"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="@drawable/selector_common_list_item_background"/>

        <ImageView
            android:id="@+id/iv_fragment_town_data_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_fragment_town_data_detail_info"
            android:src="@android:drawable/ic_menu_view"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_town_data"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/layout_fragment_town_data_label"/>

    <ImageView
        android:id="@+id/iv_fragment_town_data_detail_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/common_horizontal_padding"/>

    <ImageView
        android:id="@+id/iv_fragment_town_data_detail_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right_20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/common_horizontal_padding"/>


    <LinearLayout
        android:id="@+id/layout_fragment_town_data_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp" />

</RelativeLayout>