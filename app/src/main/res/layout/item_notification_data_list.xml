<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/page_data_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/page_item_margin_horizontal"
        android:layout_marginRight="@dimen/page_item_margin_horizontal"
        android:layout_marginTop="@dimen/page_item_margin_vertical"
        android:layout_marginBottom="@dimen/page_item_margin_vertical"
        android:paddingBottom="@dimen/page_item_margin_vertical"
        android:stateListAnimator="@drawable/selector_common_list_item_animator"
        android:background="@drawable/selector_common_list_item_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layout_item_notificaiton_data_list_top"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_item_notificaiton_data_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/page_item_margin_horizontal"
                    android:textColor="@android:color/black"
                    android:gravity="right|center_vertical"
                    style="@style/CommonText.Tiny"/>

                <TextView
                    android:id="@+id/tv_item_notificaiton_data_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/page_item_margin_horizontal"
                    android:textSize="16dp"
                    android:textColor="@android:color/black"
                    android:layout_toLeftOf="@id/tv_item_notificaiton_data_list_date"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    style="@style/CommonText"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:layout_below="@id/layout_item_notificaiton_data_list_top">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_item_notification_data_list_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_item_notification_data_list_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/page_item_margin_horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_item_notification_data_list_image"
                    android:textSize="13dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    style="@style/CommonText"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
