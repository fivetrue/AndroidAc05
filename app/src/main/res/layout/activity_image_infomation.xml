<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:v="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.fivetrue.gimpo.ac05.widget.PagerSlidingTabStrip
        android:id="@+id/tab_image_infomation_strip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        v:indicatorHeight="4dp"
        v:tabsTextColor="@color/white"
        v:indicatorColor="@color/white"
        v:tabsBackgroundColor="?attr/colorPrimary"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_image_infomation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_image_infomation_strip"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tab_image_infomation_strip"
        android:background="@drawable/common_action_bg_shadow"/>

    <ProgressBar
        android:id="@+id/pb_infomation_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>