<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <!-- @dimen/page_item_width-->
    <TextView
        android:id="@+id/tv_item_infomation_image_list_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center"
        android:visibility="gone"
        style="@style/CommonText.Medium"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_item_infomation_image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/page_item_margin_horizontal"
        android:layout_below="@id/tv_item_infomation_image_list_title"
        android:layout_marginRight="@dimen/page_item_margin_horizontal"
        android:layout_marginTop="@dimen/page_item_margin_vertical"
        android:layout_marginBottom="@dimen/page_item_margin_vertical"
        android:minHeight="200dp"
        android:paddingBottom="@dimen/page_item_margin_vertical"
        android:stateListAnimator="@drawable/selector_common_list_item_animator"
        android:background="@drawable/selector_common_list_item_background">
        <ImageView
            android:id="@+id/iv_item_infomation_image_list_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"/>

        <!--<com.android.volley.toolbox.NetworkImageView-->
            <!--android:id="@+id/iv_item_infomation_image_list_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:scaleType="center"/>-->

        <ProgressBar
            android:id="@+id/pb_item_infomation_image_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>
