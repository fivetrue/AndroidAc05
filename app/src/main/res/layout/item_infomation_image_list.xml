<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <!-- @dimen/page_item_width-->
    <android.support.v7.widget.CardView
        android:id="@+id/infomation_data_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/page_item_margin_horizontal"
        android:layout_marginRight="@dimen/page_item_margin_horizontal"
        android:layout_marginTop="@dimen/page_item_margin_vertical"
        android:layout_marginBottom="@dimen/page_item_margin_vertical"
        android:paddingBottom="@dimen/page_item_margin_vertical"
        android:stateListAnimator="@drawable/selector_common_list_item_animator"
        android:background="@drawable/selector_common_list_item_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_item_infomation_image_list_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
