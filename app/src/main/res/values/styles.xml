<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TransparentAppTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="InfomationActivityTheme" parent="AppTheme">
    </style>

    <style name="NoticeActivityTheme" parent="AppTheme">
    </style>

    <style name="CafeActivityTheme" parent="AppTheme">
    </style>

    <style name="CommonButton">
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/selector_common_button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CommonText" parent="TextAppearance.AppCompat">
        <item name="android:typeface">sans</item>
    </style>

    <style name="CommonText.Large">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CommonText.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CommonText.Medium">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="TextDropdownType">
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">@color/color_black_alpha_30</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
    </style>

    <style name="CommonListType">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CommonListType.SmallGrid">
        <item name="android:choiceMode">none</item>
    </style>

    <style name="TextDropdownType.Big">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TextDropdownType.Medium">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextDropdownType.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="SmallText">
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SmallText.Title">
        <item name="android:textSize">@dimen/small_text_title_size</item>
    </style>

    <style name="SmallText.Subtitle">
        <item name="android:textSize">@dimen/small_text_subtitle_text_size</item>
    </style>

    <style name="LargeText">
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/large_text_text_size</item>
    </style>

    <style name="CategoryText" parent="SmallText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding</item>
        <item name="android:textSize">@dimen/setting_category_text_size</item>
    </style>

    <style name="SubItemText" parent="SmallText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding</item>
        <item name="android:layout_marginLeft">@dimen/common_horizontal_padding</item>
        <item name="android:textSize">@dimen/setting_category_text_size</item>
    </style>

</resources>
