<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Chatting" >
    </style>

    <style name="AppTheme.Transparent" >
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.TransparentStatusBar" >
    </style>

    <style name="AppTheme.TransparentStatusBar.Transparent">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CropTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="CommonButton">
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/selector_common_button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CommonText" parent="TextAppearance.AppCompat">
        <item name="android:typeface">sans</item>
    </style>

    <style name="CommonText.Large">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="CommonText.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CommonText.Chat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CommonText.Tiny">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="CommonText.Medium">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="TextDropdownType">
        <item name="android:typeface">monospace</item>
        <item name="android:shadowColor">@color/color_black_alpha_30</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
    </style>

    <style name="CommonListType">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CommonListType.SmallGrid">
        <item name="android:choiceMode">none</item>
    </style>

    <style name="TextDropdownType.Big">
        <item name="android:textSize">25dp</item>
    </style>

    <style name="TextDropdownType.Medium">
        <item name="android:textSize">17dp</item>
    </style>

    <style name="TextDropdownType.Small">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="SmallText">
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SmallText.Title">
        <item name="android:textSize">@dimen/small_text_title_size</item>
    </style>

    <style name="SmallText.Subtitle">
        <item name="android:textSize">@dimen/small_text_subtitle_text_size</item>
    </style>

    <style name="LargeText">
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/large_text_text_size</item>
    </style>

    <style name="CategoryText" parent="SmallText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding</item>
        <item name="android:textSize">@dimen/setting_category_text_size</item>
    </style>

    <style name="SubItemText" parent="SmallText">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">@dimen/common_horizontal_padding</item>
        <item name="android:layout_marginLeft">@dimen/common_horizontal_padding</item>
        <item name="android:textSize">@dimen/setting_category_text_size</item>
    </style>

    <style name="CollpaseCollapsingToolbar" parent="CommonText.Medium">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ExpendCollapsingToolbar" parent="CommonText.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

</resources>
